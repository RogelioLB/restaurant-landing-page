<!-- Tooltip que aparece en hover -->
<style>
  #whatsapp-widget::before {
    content: "¡Escríbenos por WhatsApp!";
    position: absolute;
    bottom: 100%;
    right: 0;
    margin-bottom: 10px;
    background: #333;
    color: white;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 14px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s;
    white-space: nowrap;
  }
  
  #whatsapp-widget::after {
    content: "";
    position: absolute;
    bottom: 100%;
    right: 18px;
    margin-bottom: 2px;
    border: 8px solid transparent;
    border-top: 8px solid #333;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s;
  }
  
  #whatsapp-widget:hover::before,
  #whatsapp-widget:hover::after {
    opacity: 1;
    visibility: visible;
  }
</style>
