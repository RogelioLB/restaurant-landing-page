// WhatsApp Widget component
import { FaWhatsapp } from 'react-icons/fa';
---

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Animación sutil del botón
    const whatsappBtn = document.getElementById('whatsapp-widget');
    
    if (whatsappBtn) {
      // Efecto rebote suave al cargar
      whatsappBtn.animate([
        { transform: 'scale(0)', opacity: 0 },
        { transform: 'scale(1.2)', opacity: 0.7 },
        { transform: 'scale(1)', opacity: 1 }
      ], {
        duration: 600,
        easing: 'cubic-bezier(0.175, 0.885, 0.32, 1.275)',
        fill: 'forwards'
      });
      
      // Efecto hover con JavaScript para mejor animación
      whatsappBtn.addEventListener('mouseenter', () => {
        whatsappBtn.animate([
          { transform: 'scale(1)' },
          { transform: 'scale(1.1)' }
        ], {
          duration: 300,
          fill: 'forwards',
          easing: 'ease-out'
        });
      });
      
      whatsappBtn.addEventListener('mouseleave', () => {
        whatsappBtn.animate([
          { transform: 'scale(1.1)' },
          { transform: 'scale(1)' }
        ], {
          duration: 300,
          fill: 'forwards',
          easing: 'ease-out'
        });
      });
    }
  });
</script>

