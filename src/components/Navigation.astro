---
// Navigation component for restaurant landing page
---

<script>
  // Simple toggle for mobile navigation
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.getElementById('mobile-menu-toggle');
    const navMenu = document.getElementById('nav-menu');
    
    menuToggle?.addEventListener('click', () => {
      navMenu?.classList.toggle('hidden');
    });
  });
</script>

<nav class="fixed top-4 left-0 right-0 lg:left-1/2 transform lg:-translate-x-1/2 bg-black rounded-full shadow-lg px-6 py-3 mx-4 lg:w-auto max-w-7xl z-50">
  <div class="flex justify-between items-center gap-16">
    <!-- Logo -->
    <div class="flex items-center">
      <a href="#" class="flex items-center">
        <img src="/images/logo.png" class="h-10 w-auto" alt="Logo">
      </a>
    </div>
    
    <!-- Desktop Menu -->
    <div id="nav-menu" class="hidden md:flex md:items-center md:space-x-6">
      <a href="#" class="text-white font-medium hover:text-red-500 transition-colors duration-300">Inicio</a>
      <a href="#menu" class="text-white font-medium hover:text-red-500 transition-colors duration-300">Menú</a>
      <a href="#location" class="text-white font-medium hover:text-red-500 transition-colors duration-300">Ubicación</a>
      <a href="#about" class="text-white font-medium hover:text-red-500 transition-colors duration-300">Nosotros</a>
      <a href="https://wa.me/526671234567" class="bg-red-600 text-white px-5 py-2 rounded-full font-medium hover:bg-red-500 transition-colors duration-300 flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
        </svg>
        Reservar
      </a>
    </div>
    
    <!-- Mobile Menu Toggle -->
    <div class="md:hidden">
      <button id="mobile-menu-toggle" class="text-gray-800 focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile Menu Dropdown -->
  <div id="nav-menu" class="md:hidden hidden absolute right-0 left-0 mt-3 bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="flex flex-col py-2 px-4 space-y-3">
      <a href="#" class="text-gray-800 hover:text-orange-500 py-2 transition">Inicio</a>
      <a href="#menu" class="text-gray-800 hover:text-orange-500 py-2 transition">Menú</a>
      <a href="#about" class="text-gray-800 hover:text-orange-500 py-2 transition">Nosotros</a>
      <a href="#location" class="text-gray-800 hover:text-orange-500 py-2 transition">Ubicación</a>
    </div>
  </div>
</nav>
