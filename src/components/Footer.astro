      <!-- Enlaces rápidos -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-red-600">Navegación</h3>
        <ul class="space-y-2">
          <li><a href="#" class="text-gray-400 hover:text-red-600 transition-colors duration-300">Inicio</a></li>
          <li><a href="#menu" class="text-gray-400 hover:text-red-600 transition-colors duration-300">Menú</a></li>
          <li><a href="#location" class="text-gray-400 hover:text-red-600 transition-colors duration-300">Ubicación</a></li>
          <li><a href="#about" class="text-gray-400 hover:text-red-600 transition-colors duration-300">Acerca de</a></li>
        </ul>
      </div>
      
      <!-- Horarios -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-red-600">Horario</h3>
        <ul class="space-y-2 text-gray-400">
          <li class="flex justify-between">
            <span>Lunes - Jueves</span>
            <span>12:00 - 22:00</span>
          </li>
          <li class="flex justify-between">
            <span>Viernes - Sábado</span>
            <span>12:00 - 23:00</span>
          </li>
          <li class="flex justify-between">
            <span>Domingo</span>
            <span>12:00 - 21:00</span>
          </li>
        </ul>
      </div>
      
      <!-- Contacto -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-red-600">Contacto</h3>
